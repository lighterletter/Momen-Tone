<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/splash_screen_background">


        <ImageView
            android:id="@+id/colors"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:src="@drawable/choose_color_icon" />

        <ImageView
            android:id="@+id/action_bar_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/whitelogoresize" />

        <ImageView
            android:id="@+id/tools"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/choose_tool_icon"
            android:layout_marginRight="15dp"/>


    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <lighterletter.c4q.nyc.momentone.DrawingView
            android:id="@+id/canvas"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF" />


        <android.support.design.widget.NavigationView
            android:id="@+id/color_drawer"
            android:layout_width="@dimen/color_container_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#2c4d7a"
            app:menu="@menu/drawer">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <!-- Top Row -->

            <include layout="@layout/color_palette_layout"/>

            </LinearLayout>
        </android.support.design.widget.NavigationView>

        <android.support.design.widget.NavigationView
            android:id="@+id/tool_drawer"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#61a3d8"
            app:menu="@menu/drawer">
            <!--TODO: unless you create your own icons credit their origin: http://www.flaticon.com/ -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/new_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tool_drawer_buttons_height"
                    android:contentDescription="@string/start_new"
                    android:src="@drawable/new_drawing"
                    android:layout_marginBottom="@dimen/tool_drawer_buttons_bottom_margin"
                    />

                <ImageView
                    android:id="@+id/draw_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tool_drawer_buttons_height"
                    android:contentDescription="@string/brush"
                    android:src="@drawable/paint_brush"
                    android:layout_marginBottom="@dimen/tool_drawer_buttons_bottom_margin"
                    />

                <ImageView
                    android:id="@+id/erase_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tool_drawer_buttons_height"
                    android:contentDescription="@string/erase"
                    android:src="@drawable/white_eraser"
                    android:layout_marginBottom="@dimen/tool_drawer_buttons_height"
                    />

                <ImageView
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tool_drawer_buttons_height"
                    android:contentDescription="@string/save"
                    android:src="@drawable/save_icon"
                    android:layout_marginBottom="@dimen/tool_drawer_buttons_height"
                    />

                <ImageView
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tool_drawer_buttons_height"
                    android:contentDescription="@string/share"
                    android:src="@drawable/share_icon"
                    android:layout_marginBottom="@dimen/tool_drawer_buttons_bottom_margin"
                    />

            </LinearLayout>


        </android.support.design.widget.NavigationView>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>